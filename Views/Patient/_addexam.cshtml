@model RadiologyPatientsExams.Models.ExamViewModel

@{
    ViewData["Title"] = "AddExam";
}


<h2>Add new Examination</h2>

<form class="pb-3" asp-action="AddExam" asp-controller="Exam" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group pb-3 w-25">
        <label>Date</label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <div class="form-group pb-3 w-25">
        <label>PatientName</label>
        <input asp-for="PatientName" class="form-control" type="text" readonly />
         </div>
    <div class="form-group pb-3 w-25">
        <label>PatientSurname</label>
        <input asp-for="PatientSurname" class="form-control" type="text" readonly />
    </div>
    <div class="form-group pb-3 w-25">
        <label>Modality</label>
        <input asp-for="Modality" class="form-control" type="text" />
    </div>
    <div class="form-group pb-3 w-25">
        <label>Diagnosis</label>
        <input asp-for="Diagnosis" class="form-control" type="text" />
    </div>
    <div class="form-group pb-3 w-25">
        <label>Doctor</label>
        <input asp-for="Doctor" class="form-control" type="text" />
    </div>
    <div class="form-group pb-3 w-25">
        <label>Comments</label>
        <input asp-for="Comments" class="form-control" type="text" />
    </div>

    <input asp-for="Id" class="form-control" type="text" hidden />
    <input asp-for="RefPatientId" class="form-control" type="text" hidden />

    <input type="submit" class="btn btn-success" value="Add Examination" />
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
