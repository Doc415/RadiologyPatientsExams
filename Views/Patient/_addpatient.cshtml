@using RadiologyPatientsExams.Models
@model Patient


<a class="btn btn-outline-warning mt-3 mb-3" asp-controller="Patient" asp-action="Index">Back to Patient List</a>

<h2>Add a new Patient</h2>

<form class="pb-3" asp-action="AddPatient" asp-controller="Patient" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group pb-3 w-25">
        <label>Birth Date</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
    </div>
    <div class="form-group pb-3 w-25">
        <label>Name</label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group pb-3 w-25">
        <label>Surname</label>
        <input asp-for="Surname" class="form-control" type="text" />
    </div>
    <div class="form-group pb-3 w-25">
        <label>E-mail</label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>
    <div class="form-group pb-3 w-25">
        <label>Phone number</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <input asp-for="NotDeleted" class="form-control" hidden />


    <input type="submit" class="btn btn-success" value="Add Patient" />
</form>

        @section Scripts {

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
